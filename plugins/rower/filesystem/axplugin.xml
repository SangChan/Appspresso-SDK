	<feature id="http://wacapps.net/api/filesystem.read" category="Standard" />
	<feature id="http://wacapps.net/api/filesystem.write" category="Standard" />
	<feature id="http://wacapps.net/api/filesystem" category="Standard" />


	<module platform="android" platform-version="8"
		min-platform-version="7" max-platform-version=""
